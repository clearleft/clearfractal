{% set context = { infoListModifiers: infoListModifiers} %}
{% set items = [] %}

{% if eventDate %}
{% set items = items|merge([{
        title: 'Date',
        type: 'date',
        content: eventDate
    }]) %}
{% endif %}

{% if eventLocation %}
{% set items = items|merge([{
        title: 'Location',
        type: 'location',
        content: eventLocation
    }]) %}
{% endif %}

{% if eventTime %}
{% set items = items|merge([{
        title: 'Time',
        type: 'time',
        content: eventTime
    }]) %}
{% endif %}

{% include '@info-list' with context|merge({info: items}) only %}
