{% import '@events-macros' as output %}
{% set eventPictures = eventCard.eventPictures|slice(0,3) %}

{% if eventPictures|length is divisibleby(2) %}
    {% set eventPictures = eventPictures|slice(0,1) %}
{% endif %}
{% if eventSide is not defined %}
    {% set eventSide = 'left' %}
{% endif %}

{% if eventSide == 'left' %}
    {{ output.card(eventCard) }}
    {{ output.pictures(eventPictures, true, eventCard.eventBackground) }}

{% elseif eventSide == 'right' %}
    {% set headPictures = eventPictures|slice(0,1) %}
    {% set tailPictures = eventPictures|slice(1) %}

    {{ output.pictures(headPictures, true, eventCard.eventBackground) }}
    {{ output.card(eventCard) }}
    {{ output.pictures(tailPictures, false) }}

{% endif %}