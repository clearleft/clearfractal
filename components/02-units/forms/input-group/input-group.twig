<div class="InputGroup{% if inputGroupModifiers %} InputGroup--{{ inputGroupModifiers }}{% endif %}">
    <form action="{{ inputGroupURL }}" method="post">
        <input type="hidden" value="1" name="embed">
        <label class="InputGroup-label Heading Heading--body" for="{{ inputGroupID }}">{{ inputGroupLabel }}</label>
        <div class="Input InputGroup-combo">
            <input class="InputGroup-field" type="email" name="email" placeholder="{{ inputGroupPlaceholder }}" id="{{ inputGroupID }}"/>
            <button type="submit" class="InputGroup-submit">{{ inputGroupSubmit }}</button>
        </div>
    </form>
    {% if inputGroupMicrocopy %}
        <small class="InputGroup-microcopy">{{inputGroupMicrocopy}}</small>
    {% endif %}
</div>
