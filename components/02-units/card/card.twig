<article class="Card{% if cardModifier %} Card{{ cardModifier }}{% endif %}">

    {% if cardModifier != "--tiny-lesson" %}<div class="Bar"></div>{% endif %}

    <div class="Card-primary">
        <header>
            <h3 class="Card-title">{{ cardTitle }}</h3>
        </header>

        <div class="Card-category">{{ cardCategory }}</div>

        <p class="Card-description">{{ cardDescription }}</p>

        {% if indexCard %}
            {% include '@index-card' %}
        {% endif %}
    </div>

</article>
