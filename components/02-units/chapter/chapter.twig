<div class="Chapter">
    <div class="Chapter-label">
        {% include '@counter' %}
    </div><!--/.Chapter-label-->
    <div class="Chapter-primary Chapter-number">
        <h2 class="Chapter-title">{{chapterTitle}}</h2>
        <p>{{chapterText}}</p>
    </div><!--/.Chapter-primary-->
    <div class="Chapter-secondary">
        <img class="Chapter-image" src="{{chapterImageSVG}}" onerror="this.src='{{chapterImagePNG}}'; this.onerror=null;" alt="">
    </div><!--/.Chapter-secondary-->
</div><!--/.Chapter-->