<div class="TextBlock{% if textBlockModifier %} TextBlock{{textBlockModifier}}{% endif %} Prose">
    {% if textBlockModifier == "--author" %}
    <div class="TextBlock-author">
        {% include '@author' %}
    </div>
    {% endif %}
    <h2>{{textBlockTitle}}</h2>
    <p>{{textBlockText}}</p>
</div><!--/.TextBlock Prose-->